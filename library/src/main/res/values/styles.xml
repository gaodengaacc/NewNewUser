<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LibBaseTheme" parent="Theme.AppCompat"/>

    <style name="LibTheme" parent="LibBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:editTextColor">@color/textColorHint</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="LibTheme.NoTitle" parent="LibTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LibTheme.NoTitle.FullScreen" parent="LibTheme.NoTitle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LibTheme.TranslucentStatus" parent="LibTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="LibTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="LibTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="textStyle">
        <item name="android:textColor">@color/alb10</item>
        <item name="android:lineSpacingExtra">@dimen/global_padding3</item>
        <item name="android:textSize">@dimen/global_size_16</item>
    </style>

    <style name="textStyleSmall" parent="textStyle">
        <item name="android:textColor">@color/alb10</item>
        <item name="android:textSize">@dimen/global_size_15</item>
    </style>

    <style name="dialog_theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/alb0</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- Dialog 样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>