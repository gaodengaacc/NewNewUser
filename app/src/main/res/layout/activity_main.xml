<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.lyun.user.viewmodel.MainActivityViewModel"></import>

        <variable
            name="mvvm"
            type="MainActivityViewModel"></variable>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabSelectListener="@{mvvm.tabListener}"
            app:tabSelectedTextColor="#7343ea"
            app:tabTextAppearance="@style/TextAppearance.Design.Tab"
            app:tabTextColor="#9a9a9a"
            app:viewPage="@{mvvm.viewPage}"
            app:initTab="@{mvvm.tabData}"
            app:select="@{mvvm.selectIndex}"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/main_tab"
            app:adapter="@{mvvm.relayCommandViewPage}"></android.support.v4.view.ViewPager>
    </RelativeLayout>
</layout>
