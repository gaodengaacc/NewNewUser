<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.lyun.user.viewmodel.ServiceCardItemViewModel"></import>
        <variable
            name="mvvm"
            type="ServiceCardItemViewModel"></variable>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="165dp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"
               app:imageSrc="@{mvvm.cardBg}"/>
           <TextView
               android:id="@+id/item_service_card_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="律云法律服务"
               android:textColor="@color/tcw"
               android:textSize="14sp"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="25dp"/>
           <TextView
               android:layout_below="@+id/item_service_card_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@{mvvm.cardValue}"
               android:textColor="@color/tcw"
               android:textSize="12sp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="25dp"/>
           <Button
               android:layout_width="90dp"
               android:layout_height="30dp"
               android:layout_marginRight="20dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:text="购买"
               android:textSize="14sp"
               android:textColor="@{mvvm.buyTextColor}"
               android:layout_marginBottom="22dp"
               android:background="@drawable/corner_white_bg_card"/>
       </RelativeLayout>
    </LinearLayout>
</layout>