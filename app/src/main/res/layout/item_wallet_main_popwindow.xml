<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.lyun.user.viewmodel.WalletMainPopDesItemViewModel"></import>
        <variable
            name="mvvm"
            type="WalletMainPopDesItemViewModel"></variable>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center"
            android:textColor="@drawable/item_text_color"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="13sp"
            android:text="@{mvvm.text}"
            android:background="@drawable/item_text_select_bg"/>
    </LinearLayout>
</layout>